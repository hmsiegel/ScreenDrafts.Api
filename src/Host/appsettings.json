  "LoggerSettings": {
    "AppName": "ScreenDrafts",
    "ElasticSearchUrl": "http://localhost:9200",
    "WriteToFile": true,
    "StructuredConsoleLogging": false,
    "MinimumLogLevel": "Information"
  }
